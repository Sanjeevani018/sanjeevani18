//1.Java automatically promotes each byte ,short or  char operant to int when evaluating an expression.


public class javabasics{
    public static void main(String args[]){
        char a= 'a';
         char b= 'b';
         System.out.println((int)(b));
         System.out.println((int)(a));
         System.out.println(b-a);
    }
}///run successfully 



public class javabasics{
    public static void main(String args[]){
        char a= 'a';
         char b= 'b';
         char c = a- b;
         /*System.out.println((int)(b));
         System.out.println((int)(a));
         System.out.println(b-a);*/
    }
}/////error 



// 2.If one operand is long ,float or double  the whole expression is promoted to long , float ,respectively


public class javabasics{
    public static void main(String args[]){
       int a=10;
       float b=20.25f;
       long c=25;
       double d =30;
       double ans=a+b+c+d;
         System.out.println(ans);
    }
}//85.25



public class javabasics{
    public static void main(String args[]){
       int a=10;
       float b=20.25f;
       long c=25;
       double d =30;
       int ans=a+b+c+d;
         System.out.println(ans);
    }
}// error: incompatible types: possible lossy conversion from double to int
       int ans=a+b+c+d;
